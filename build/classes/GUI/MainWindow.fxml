<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="mainWindow" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MainWindowController">
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="afficherButton" onAction="#openAfficherChauffeur" text="Afficher Chauffeur"/>
        <Button fx:id="ajouterButton" onAction="#openAjouterChauffeur" text="Ajouter Chauffeur"/>
        <Button fx:id="supprimerButton" onAction="#openSupprimerChauffeur" text="Supprimer Chauffeur"/>
        <Button fx:id="updateButton" onAction="#openUpdateChauffeur" text="Modifier Chauffeur"/>
    </HBox>
    <Button fx:id="returnButton" onAction="#returnToMain" text="Return to Main" />
</VBox>

